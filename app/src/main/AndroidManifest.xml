<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.sample.foodrecipeapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ca.sample.foodrecipeapp.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ca.sample.foodrecipeapp.RegisterActivity" >

        </activity>
        <activity android:name="ca.sample.foodrecipeapp.AuthenticationActivity" />
        <activity android:name="ca.sample.foodrecipeapp.UpdateRecipeActivity" />
        <activity android:name="ca.sample.foodrecipeapp.Upload_Recipe" />
        <activity android:name="ca.sample.foodrecipeapp.DetailActivity" />
        <activity android:name="ca.sample.foodrecipeapp.MainActivity">

        </activity>
    </application>

</manifest>